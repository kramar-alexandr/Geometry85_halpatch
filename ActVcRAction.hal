      	if(readfirstmain(QTr,1,true))then begin
      		salesman = QTr.SalesMan;
      	end;
    end;
  	
    ExtractObj(salesman,pos,person);
    while (nonblank(person)) begin
      Ur.Code = person;
      if ReadFirstMain(Ur,1,true) then begin
        if nonblank(Ur.Phone1) then begin
          phonetmp = Ur.Phone1;
        end else begin
          phonetmp = Ur.Phone2;
