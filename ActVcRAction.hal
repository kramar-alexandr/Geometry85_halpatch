          phonetmp = StrReplace(phonetmp,"-","");
          phonetmp = StrReplace(phonetmp," ","");
          phonetmp = StrReplace(phonetmp,"(","");
          phonetmp = StrReplace(phonetmp,")","");
          phonetmp = StrReplace(phonetmp,"*","");
          switch (left(phonetmp,1)) begin
            case "+":
              phone = phonetmp;
            case "3":
              phone = "+" & phonetmp;
            case "8":
              phone = "+3" & phonetmp;
            case "0":
              phone = "+38" & phonetmp;
            otherwise
              phone = "+380" & phonetmp;
          end;
          reciever = reciever & phone & ",";
        end;
      end;
      ExtractObj(salesman,pos,person);
    end;
    reciever = left(reciever,len(reciever) - 1);
    test2f = false;
    switch (Actr.FromFileName) begin
      case "POVc":
        text = "PO ";
        test2f = true;
      case "QTVc":
        text = "CE ";
        test2f = true;
    end;
